<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        tools:context=".ui.project.ProjectFragment">


        <ImageView
            android:id="@+id/frame"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/rectangle"
            app:layout_constraintDimensionRatio="H,3:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textproject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Project Bidding"
            android:textColor="@android:color/white"
            android:textSize="20sp"

            app:fontFamily="@font/poppins_bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.059"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/frame" />

        <ImageView
            android:id="@+id/ivPostProject"
            android:layout_width="110dp"
            android:layout_height="88dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp"

            android:src="@drawable/projectyellow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textproject" />

        <TextView
            android:id="@+id/text_postproject"
            android:layout_width="23dp"
            android:layout_height="42dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_bold"
            android:text="11"
            android:textColor="@android:color/black"
            android:textSize="30sp"

            app:fontFamily="@font/poppins_bold"
            app:layout_constraintEnd_toEndOf="@+id/ivPostProject"

            app:layout_constraintStart_toStartOf="@+id/ivPostProject"
            app:layout_constraintTop_toTopOf="@+id/ivPostProject" />

        <TextView
            android:id="@+id/post_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Post Project"
            android:textColor="@color/textproject"

            android:textSize="12sp"
            app:fontFamily="@font/nunito_bold"
            app:layout_constraintEnd_toEndOf="@+id/ivPostProject"

            app:layout_constraintStart_toStartOf="@+id/ivPostProject"
            app:layout_constraintTop_toBottomOf="@+id/text_postproject" />

        <ImageView
            android:id="@+id/ivBidProject"
            android:layout_width="110dp"
            android:layout_height="88dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/projectblue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textproject" />

        <TextView
            android:id="@+id/text_bidproject"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_bold"
            android:text="13"
            android:textColor="@android:color/black"

            android:textSize="30sp"
            app:fontFamily="@font/poppins_bold"
            app:layout_constraintEnd_toEndOf="@+id/ivBidProject"
            app:layout_constraintStart_toStartOf="@+id/ivBidProject"
            app:layout_constraintTop_toTopOf="@+id/ivBidProject" />

        <TextView
            android:id="@+id/bid_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Bid Project"

            android:textColor="@color/textproject"
            android:textSize="12sp"
            app:fontFamily="@font/nunito_bold"
            app:layout_constraintEnd_toEndOf="@+id/ivBidProject"
            app:layout_constraintStart_toStartOf="@+id/ivBidProject"
            app:layout_constraintTop_toBottomOf="@+id/text_bidproject" />


        <ImageView
            android:id="@+id/ivAcceptedProject"
            android:layout_width="110dp"
            android:layout_height="88dp"

            android:layout_marginTop="20dp"
            android:layout_marginEnd="18dp"

            android:src="@drawable/projectgreen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/frame"
            app:layout_constraintTop_toBottomOf="@+id/textproject" />

        <TextView
            android:id="@+id/text_terimaproject"
            android:layout_width="27dp"
            android:layout_height="42dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_bold"
            android:text="6"
            android:textColor="@android:color/black"

            android:textSize="30sp"
            app:fontFamily="@font/poppins_bold"
            app:layout_constraintEnd_toEndOf="@+id/ivAcceptedProject"

            app:layout_constraintStart_toStartOf="@+id/ivAcceptedProject"
            app:layout_constraintTop_toTopOf="@+id/ivAcceptedProject" />

        <TextView
            android:id="@+id/post_bidproject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Terima Project"

            android:textColor="@color/textproject"
            android:textSize="12sp"
            app:fontFamily="@font/nunito_bold"
            app:layout_constraintEnd_toEndOf="@+id/ivAcceptedProject"

            app:layout_constraintStart_toStartOf="@+id/ivAcceptedProject"
            app:layout_constraintTop_toBottomOf="@+id/text_terimaproject" />

        <LinearLayout
            android:id="@+id/toptalentgethub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivPostProject">

            <TextView
                style="@style/Poppins.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top Talent"
                android:textColor="@color/blackgethub"
                android:textSize="16sp" />

            <TextView
                style="@style/Poppins.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="GetHub"
                android:textColor="@color/teal"
                android:textSize="16sp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/search"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="20dp"

            android:src="@drawable/cari"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.943"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivPostProject" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewTop"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginTop="13dp"
            android:orientation="horizontal"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toptalentgethub" />

        <LinearLayout
            android:id="@+id/rekomendasiprojectbid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recyclerViewTop">

            <TextView
                style="@style/Poppins.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Listing"
                android:textColor="@color/blackgethub"
                android:textSize="16sp" />

            <TextView
                style="@style/Poppins.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="Project Bid"
                android:textColor="@color/teal"
                android:textSize="16sp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/search2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="10dp"

            android:src="@drawable/cari"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.943"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recyclerViewTop" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewRekomendasiProjectBid"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rekomendasiprojectbid" />

        <ImageView
            android:id="@+id/fabPostProject"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/plus"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.96"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.897" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>