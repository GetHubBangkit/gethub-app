<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/cardBase"
        android:layout_width="372dp"
        android:layout_height="81dp"
        android:contentDescription="TODO"
        android:src="@drawable/card"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    >

    <LinearLayout
        android:id="@+id/llCardContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@+id/cardBase"
        app:layout_constraintTop_toTopOf="@id/cardBase">

        <TextView
            android:id="@+id/tvGethubName"
            style="@style/Poppins.Bold"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            tools:text="Danish Rabbani"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvGethubProfession"
            style="@style/Nunito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Software Enginer"
            android:textSize="12sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>