<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="157dp"
    android:layout_height="210dp"
    android:layout_marginStart="15dp"
    app:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="157dp"
        android:layout_height="210dp"
        android:background="?android:attr/selectableItemBackground">


        <ImageView
            android:id="@+id/ivCertificationImage"
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:src="@drawable/kelola_produk"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCertificationTitle"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_bold"
            android:maxLines="1"
            android:text="Judul Sertifikat"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:fontFamily="@font/poppins_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivCertificationImage" />

        <LinearLayout
            android:id="@+id/LlKategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="0dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCertificationTitle">

            <TextView
                android:id="@+id/tvKategori"
                style="@style/Nunito.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategori : "
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvInputKategori"
                style="@style/Nunito.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Kompetisi"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivDeleteCertification"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/kelola_bin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.875"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.986" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
