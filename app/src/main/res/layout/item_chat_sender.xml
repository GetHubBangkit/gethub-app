<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:id="@+id/tvSenderName"
            style="@style/Nunito"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Tono Jaya"
            android:textSize="12dp"
            app:layout_constraintEnd_toStartOf="@id/ivSenderAvatar"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivSenderAvatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profilepic1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/circle" />

        <LinearLayout
            android:id="@+id/messageRoot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/sender_chat_background"
            android:orientation="vertical"
            android:paddingVertical="12dp"
            android:paddingStart="24dp"
            android:paddingEnd="8dp"
            app:layout_constraintEnd_toStartOf="@id/ivSenderAvatar"
            app:layout_constraintTop_toBottomOf="@id/tvSenderName">

            <TextView
                android:id="@+id/tvMessage"
                style="@style/Nunito.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Halo cuy kamu apa kabar?"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tvChatDate"
                style="@style/Nunito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="12 Des 2023 03:23"
                android:textColor="@color/white"
                android:textSize="8dp" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
